---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const blogPosts = await getCollection('blog');
const recentPosts = blogPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<BaseLayout title="HardCodedLife - Personal Website">
  <section class="hero">
    <h1>Welcome to HardCodedLife</h1>
    <p class="hero-description">
      Personal website showcasing my projects, thoughts, and journey in software development.
    </p>
  </section>

  <section class="recent-posts">
    <h2>Recent Posts</h2>
    {recentPosts.length > 0 ? (
      <div class="posts-grid">
        {recentPosts.map((post) => (
          <article class="post-card">
            <h3>
              <a href={`/blog/${post.slug}/`}>{post.data.title}</a>
            </h3>
            <p>{post.data.description}</p>
            <time datetime={post.data.pubDate.toISOString()}>
              {post.data.pubDate.toLocaleDateString('en-us', {
                year: 'numeric',
                month: 'short',
                day: 'numeric',
              })}
            </time>
          </article>
        ))}
      </div>
    ) : (
      <p>No blog posts yet. Check back soon!</p>
    )}
    <p>
      <a href="/blog/" class="view-all">View all posts →</a>
    </p>
  </section>

  <section class="about-preview">
    <h2>About Me</h2>
    <p>
      I'm a software developer passionate about creating efficient, elegant solutions to complex problems.
      This is my personal space to share projects, insights, and experiences from my coding journey.
    </p>
    <p>
      <a href="/about/" class="learn-more">Learn more about me →</a>
    </p>
  </section>
</BaseLayout>

<style>
  .hero {
    text-align: center;
    margin: 3rem 0;
    padding: 2rem 0;
  }
  
  .hero h1 {
    font-size: 3rem;
    margin: 0 0 1rem 0;
    color: #333;
  }
  
  .hero-description {
    font-size: 1.2rem;
    color: #666;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }
  
  .recent-posts,
  .about-preview {
    margin: 3rem 0;
  }
  
  .recent-posts h2,
  .about-preview h2 {
    color: #333;
    border-bottom: 2px solid #007bff;
    padding-bottom: 0.5rem;
    margin-bottom: 1.5rem;
  }
  
  .posts-grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    margin-bottom: 1.5rem;
  }
  
  .post-card {
    background: #f8f9fa;
    padding: 1.5rem;
    border-radius: 8px;
    border-left: 4px solid #007bff;
  }
  
  .post-card h3 {
    margin: 0 0 0.5rem 0;
  }
  
  .post-card h3 a {
    color: #333;
    text-decoration: none;
  }
  
  .post-card h3 a:hover {
    color: #007bff;
  }
  
  .post-card p {
    color: #666;
    margin: 0 0 0.5rem 0;
    line-height: 1.5;
  }
  
  .post-card time {
    color: #777;
    font-size: 0.9rem;
  }
  
  .view-all,
  .learn-more {
    color: #007bff;
    text-decoration: none;
    font-weight: 500;
  }
  
  .view-all:hover,
  .learn-more:hover {
    text-decoration: underline;
  }
  
  .about-preview p {
    line-height: 1.6;
    color: #555;
    margin-bottom: 1rem;
  }
</style>