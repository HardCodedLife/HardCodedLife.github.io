---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Message Sent - HardCodedLife" description="Your message has been sent successfully">
  <div class="success-container">
    <div class="success-icon">âœ…</div>
    <h1>Message Sent Successfully!</h1>
    
    <p class="success-message">
      Thank you for reaching out! I've received your message and will get back to you as soon as possible.
    </p>
    
    <div class="next-steps">
      <h2>What happens next?</h2>
      <ul>
        <li>I typically respond within 24-48 hours</li>
        <li>I'll reply directly to the email address you provided</li>
        <li>For urgent matters, you can also reach me at hello@hardcodedlife.dev</li>
      </ul>
    </div>
    
    <div class="action-buttons">
      <a href="/" class="btn btn-primary">Back to Home</a>
      <a href="/blog/" class="btn btn-secondary">Check out my Blog</a>
    </div>
  </div>
</BaseLayout>

<style>
  .success-container {
    max-width: 600px;
    margin: 2rem auto;
    text-align: center;
    padding: 2rem;
    background: #f8f9fa;
    border-radius: 12px;
    border: 1px solid #dee2e6;
  }
  
  .success-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
  }
  
  h1 {
    color: #28a745;
    margin-bottom: 1.5rem;
    font-size: 2rem;
  }
  
  .success-message {
    font-size: 1.1rem;
    color: #495057;
    margin-bottom: 2rem;
    line-height: 1.6;
  }
  
  .next-steps {
    background: white;
    padding: 1.5rem;
    border-radius: 8px;
    margin-bottom: 2rem;
    text-align: left;
  }
  
  .next-steps h2 {
    color: #333;
    margin-bottom: 1rem;
    font-size: 1.3rem;
    text-align: center;
  }
  
  .next-steps ul {
    color: #555;
    line-height: 1.6;
  }
  
  .next-steps li {
    margin-bottom: 0.5rem;
  }
  
  .action-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
    border: 2px solid transparent;
  }
  
  .btn-primary {
    background: #007bff;
    color: white;
  }
  
  .btn-primary:hover {
    background: #0056b3;
  }
  
  .btn-secondary {
    background: white;
    color: #6c757d;
    border-color: #6c757d;
  }
  
  .btn-secondary:hover {
    background: #6c757d;
    color: white;
  }
  
  @media (max-width: 600px) {
    .success-container {
      margin: 1rem;
      padding: 1.5rem;
    }
    
    .action-buttons {
      flex-direction: column;
    }
    
    .btn {
      width: 100%;
    }
  }
</style>